<html>
   <head>
      <title>Creating Blog Page</title>
      <link rel="stylesheet" href="/assets/css/index.css" />
      <link rel="stylesheet" href="/assets/css/nav.css" />
      <link rel="stylesheet" href="/assets/css/blog.css" />
      <link
         rel="stylesheet"
         href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      />
      <meta name="viewport" content="width=device-width; initial-scale=1.0" />
   </head>

   <body>
      <nav class="navbar">
         <ul class="navbar-ul">
            <div class="navbar-left">
               <li>
                  <img src="assets/img/dumbways.png" class="navbar-logo" />
               </li>
               <li>
                  <a href="/" class="navbar-link"> Home </a>
               </li>
               <li>
                  <a href="/blog" class="navbar-link active"> Blog </a>
               </li>
               <li>
                  <a href="/testimonial" class="navbar-link"> Testimonial </a>
               </li>
            </div>
            <div class="navbar-right">
               <li>
                  <a href="/contact" class="navbar-contact-btn"> Contact </a>
               </li>
               <button id="hamburger-button" onclick="toggleHamburger()">
                  <i class="fa-solid fa-bars fa-2x"></i>
               </button>
            </div>
         </ul>
      </nav>
      <div class="hamburger-container hide">
         <a href="/" class="hamburger-nav-link"> Home </a>
         <a href="/blog" class="hamburger-nav-link hamburger-active"> Blog </a>
         <a href="/testimonial" class="hamburger-nav-link"> Testimonial </a>
         <a href="/contact" class="hamburger-nav-link"> Contact </a>
      </div>

      <div class="blog">
         <div class="blog-form">
            <div class="form-container">
               <form action="/edit-blog/{{data.id}}" method="POST">
                  <h1>Update Post Blog</h1>
                  <div>
                     <label for="input-blog-title">Title</label>
                     <input
                        id="input-blog-title"
                        name="title"
                        value="{{data.title}}"
                     />
                  </div>
                  <div>
                     <label for="input-blog-content">Content</label>
                     <textarea
                        id="input-blog-content"
                        name="content"
                     >{{data.content}}</textarea>
                  </div>
                  <input
                     type="text"
                     name="createdAt"
                     value="{{data.createdAt}}"
                     hidden
                  />
                  <input
                     type="text"
                     name="author"
                     value="{{data.author}}"
                     hidden
                  />
                  <!-- <div>
                        <div style="display: flex; gap : 2">
                            <input type="checkbox" id="nodejs" value="nodejs" />
                            <label>NodeJs</label>
                        </div>
                        <div style="display: flex; gap : 2">
                            <input type="checkbox" id="python" value="python" />
                            <label>Python</label>
                        </div>
                    </div> -->
                  <div>
                     <label>Upload Image</label>
                     <div class="input-blog-image-group">
                        <label for="input-blog-image">
                           <p>Attach File</p>
                           <img src="assets/icon/file.png" alt="file" />
                        </label>
                        <input
                           type="file"
                           id="input-blog-image"
                           name="image"
                           hidden
                        />
                     </div>
                  </div>
                  <div class="button-group">
                     <button>Update Blog</button>
                  </div>
               </form>
            </div>
         </div>

      </div>

      <script src="./assets/js/nav.js"></script>
      <script src="assets/js/blog.js"></script>
   </body>
</html>